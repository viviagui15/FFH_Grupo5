<body>



    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background: #ffffff;">
        <a class="navbar-brand  font-weight-bold" href="/Usuario/Logueo">
            <img src="~/img/logo/logo.JPEG" width="40" height="40" class="d-inline-block" alt="">
            FAR FROM HOME
        </a>
        <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                @*<li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">

                    </li>*@
            </ul>
            @*<span class="navbar-nav col-xl-4 mr-auto">

                    <a class="nav-link float-lg-right btn btn-sm btn-primary" style="font-size: 16px; background: #21C87A; border-color:#21C87A;" href="~/Publicacion/Create">Agregar Mascota</a>


                </span>*@
            <span class="navbar-nav align-content-center mr-auto">

                @using (Html.BeginForm("Index", "Publicacion", FormMethod.Get))
                {
                    @Html.TextBox("searching")<input class="nav-link float-lg-right btn btn-sm align-content-center" style="font-size: 16px; background: #21C87A; border-color:#21C87A;" id="myInput" type="submit" placeholder="Buscá tu mascota..." value="Buscar">
                }

                @*@using (Html.BeginForm("Index", "Publicacion", FormMethod.Get))
                    {
                        @Html.TextBox("searching")<input type="submit" value="Search" />}*@
            </span>




            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @User.Identity.Name
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="~/Usuario/Logout">Cerrar Sesión</a>
                            <a class="dropdown-item" href="~/Usuario/Logueo">Inicio</a>
                        </div>
                    </li>
                </ul>
                @*@User.Identity.Name*@
            }
            else
            {
                <span class="navbar-text">
                    <button type="button" class="btn btn-sm" style="font-size: 16px; background: #21C87A; border-color:#21C87A;" data-toggle="modal" data-target="#exampleModal">
                        Iniciar Sesión
                    </button>
                    <button type="button" class="btn btn-sm" style="font-size: 16px; background: #21C87A; border-color:#21C87A;" data-toggle="modal" data-target="#exampleModal">
                        Registrarse
                    </button>
                </span>
            }
        </div>
    </nav>





  





    <div class="container">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                //mensaje con valor , entonces muestro el error en el caso de q lo haya
                <div class="alert alert-danger">@ViewBag.Message</div>
            }
        }
        <form action="/Usuario/Login" method="post">

            <div class="container">
                <script>
                    $('#myModal').on('shown.bs.modal', function () {
                        $('#myInput').trigger('focus')
                    })
                </script>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="">
                            <div class="">

                                @*<h5 class="modal-title texto-claro" id="exampleModalLabel">Iniciar Sesión</h5>*@
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                                <div class="modal-dialog text-center modal-content">



                                    <div class="col-12 user-img">
                                        <img src="~/img/unnamed.png" />
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group" id="user-group">
                                            <input type="text" class="form-control" name="email" placeholder="Nombre de usuario" />

                                        </div>
                                        <div class="form-group" id="contraseña-group">
                                            <input type="password" class="form-control" name="password" placeholder="Contraseña" />
                                        </div>
                                        <div class="form-group col-12">
                                            <button type="submit" class="btn button-grande btn-primary" style=background: #21C87A;"> <i class="fas fa-sign-in-alt"></i> Ingresar</button>
                                        </div>
                                    </div>
                                    <div class="col-12 forgot">
                                        @Html.ActionLink("Registrarme", "Create", "Usuario") <br>
                                        @Html.ActionLink("Recordar mi contraseña", "Grilla", "FFH") <br>
                                        @Html.ActionLink("Ingresar sin registrarme", "Grilla", "FFH")

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </form>


    </div>




    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="footer text-muted">
        <div class="container">
            &copy; 2020 - ProyectoFFH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
